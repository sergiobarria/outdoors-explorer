---
import { Image } from 'astro:assets';
import { LeafIcon, MountainIcon, UsersIcon } from 'lucide-react';

import MainLayout from '@/layouts/main-layout.astro';
import { AppAvatar } from '@/components/site/app-avatar';
import aboutImg1 from '@/assets/about-1.webp';
import aboutImg2 from '@/assets/about-2.webp';
import placeholderImg from '@/assets/placeholder-image.jpg';

const teamMembers = [
	{
		name: 'Emma Green',
		role: 'Founder & CEO',
		image: '/placeholder-image.jpg',
		bio: 'With over 20 years of experience in eco-tourism, Emma founded Green Adventures to share her passion for sustainable travel.'
	},
	{
		name: 'Michael Rivers',
		role: 'Head of Operations',
		image: '/placeholder-image.jpg',
		bio: 'Michael ensures that every Green Adventure tour runs smoothly while minimizing environmental impact.'
	},
	{
		name: 'Sophia Woods',
		role: 'Lead Naturalist',
		image: '/placeholder-image.jpg',
		bio: "Sophia's extensive knowledge of ecosystems worldwide enriches every tour with fascinating insights."
	}
];

const missions = [
	{
		icon: LeafIcon,
		title: 'Preserve Nature',
		description:
			'We strive to minimize our environmental impact and actively contribute to conservation efforts in the areas we visit.'
	},
	{
		icon: UsersIcon,
		title: 'Empower Communities',
		description:
			'We work closely with local communities, ensuring that tourism benefits those who call our destinations home.'
	},
	{
		icon: MountainIcon,
		title: 'Inspire Adventure',
		description:
			'We create unforgettable experiences that connect people with nature and inspire a lifelong love for our planet.'
	}
];
---

<MainLayout>
	<section class="relative w-full py-12 text-white md:py-24 lg:py-32">
		{/* Background Image */}
		<div class="absolute inset-0 z-0">
			<Image
				src={aboutImg1}
				alt="Background Image"
				quality={80}
				class="pointer-events-none h-full object-cover"
			/>
		</div>

		{/* Dark overlay */}
		<div class="absolute inset-0 z-10 bg-black opacity-70"></div>

		<div class="container relative z-20 px-4 md:px-6">
			<h1
				class="mb-4 text-3xl font-bold tracking-tighter sm:text-4xl md:text-5xl lg:text-6xl/none"
			>
				About Outdoors Explorers
			</h1>
			<p class="max-w-[700px] text-gray-300 md:text-xl">
				Pioneering eco-friendly exploration since 2005, we&apos;re committed to showing you
				the world&apos;s wonders while preserving them for future generations.
			</p>
		</div>
	</section>

	<section class="w-full py-12 md:py-24">
		<div class="container px-4 md:px-6">
			<h2 class="mb-8 text-3xl font-bold tracking-tighter sm:text-4xl">Our Story</h2>
			<div class="grid grid-cols-1 items-center gap-12 md:grid-cols-2">
				<div>
					<p class="mb-4 text-gray-600">
						Outdoors Explorers was born from a simple idea: that exploring the world
						shouldn&apos;t come at the cost of damaging it. Founded by Emma Green in
						2005, our company has grown from a small local tour operator to a global
						leader in sustainable tourism.
					</p>
					<p class="mb-4 text-gray-600">
						We&apos;ve taken thousands of adventurers to the far corners of the Earth,
						always with a focus on minimizing our environmental footprint and maximizing
						positive impact on local communities.
					</p>
					<p class="text-gray-600">
						Today, we continue to innovate in eco-friendly travel practices, setting new
						standards for responsible tourism and inspiring a new generation of
						conscious travelers.
					</p>
				</div>
				<div class="relative h-[300px] overflow-hidden rounded-lg">
					<Image
						src={placeholderImg}
						alt="Outdoors Explorers team in nature"
						width={600}
						height={400}
						class="absolute inset-0 h-full w-full object-cover"
					/>
				</div>
			</div>
		</div>
	</section>

	<section class="w-full overflow-hidden bg-gray-200 py-16 md:py-24 lg:py-32">
		<div class="container relative px-4 md:px-6">
			<h2 class="mb-12 text-center text-4xl font-bold tracking-tighter sm:text-5xl">
				Our Mission
			</h2>
			<div class="relative z-10 grid grid-cols-1 gap-8 md:grid-cols-3">
				{
					missions.map((mission) => (
						<div class="transform rounded-lg bg-emerald-500 p-6 transition-all duration-300 ease-in-out">
							<div class="flex flex-col items-center text-center">
								<div class="mb-4 rounded-full bg-white p-3">
									<mission.icon className="h-8 w-8 text-emerald-500" />
								</div>
								<h3 class="mb-2 text-xl font-bold">{mission.title}</h3>
								<p class="text-white/80">{mission.description}</p>
							</div>
						</div>
					))
				}
			</div>
			<div
				class="absolute left-1/2 top-1/2 -z-10 h-[200%] w-[200%] -translate-x-1/2 -translate-y-1/2 transform rounded-full bg-emerald-500/10 blur-3xl"
			>
			</div>
		</div>
	</section>

	<section class="w-full overflow-hidden py-16 md:py-24 lg:py-32">
		<div class="container relative px-4 md:px-6">
			<h2 class="mb-12 text-center text-4xl font-bold tracking-tighter sm:text-5xl">
				Meet Our Team
			</h2>
			<div class="relative z-10 grid grid-cols-1 gap-8 md:grid-cols-3">
				{
					teamMembers.map((member, index) => (
						<div class="group relative">
							<div class="absolute inset-0 rotate-3 transform rounded-lg bg-emerald-500 transition-transform duration-300 ease-in-out group-hover:rotate-0" />
							<div class="relative -rotate-3 transform overflow-hidden rounded-lg border-2 border-emerald-500 bg-black p-6 text-white transition-transform duration-300 ease-in-out group-hover:rotate-0">
								<div class="absolute left-0 top-0 h-1 w-full bg-gradient-to-r from-emerald-300 via-emerald-500 to-emerald-700" />
								<div class="relative mb-6">
									<div class="mx-auto h-32 w-32 transform overflow-hidden rounded-full border-4 border-emerald-500 transition-transform duration-300 ease-in-out group-hover:scale-110">
										<AppAvatar image={member.image} fallback={member.name} />
									</div>
									<div class="absolute -bottom-2 left-1/2 -translate-x-1/2 transform rounded-full bg-emerald-500 px-4 py-1 text-sm font-semibold text-black">
										{member.role}
									</div>
								</div>
								<h3 class="mb-2 text-center text-xl font-bold">{member.name}</h3>
								<p class="text-center text-white/80">{member.bio}</p>
							</div>
						</div>
					))
				}
			</div>
			<div
				class="absolute left-1/2 top-1/2 -z-10 h-[150%] w-[150%] -translate-x-1/2 -translate-y-1/2 transform rounded-full bg-emerald-500/10 blur-3xl"
			>
			</div>
		</div>
	</section>

	<section class="relative w-full py-12 text-white md:py-24 lg:py-32">
		{/* Background Image */}
		<div class="absolute inset-0 z-0">
			<Image
				src={aboutImg2}
				alt="Background Image"
				quality={80}
				class="pointer-events-none h-full object-cover"
			/>
		</div>

		{/* Dark overlay */}
		<div class="absolute inset-0 z-10 bg-gradient-to-r from-black via-black/70 to-transparent">
		</div>

		<div class="container relative z-20 px-4 md:px-6">
			<h2 class="mb-4 text-3xl font-bold tracking-tighter sm:text-4xl">
				Our Commitment to the Environment
			</h2>
			<p class="mb-8 max-w-[700px] text-gray-300 md:text-xl">
				At Outdoors Explorers, sustainability isn&apos;t just a buzzwordâ€”it&apos;s at the
				core of everything we do.
			</p>
			<ul class="mb-6 max-w-[700px] space-y-4 text-left">
				<li class="flex items-start">
					<LeafIcon className="mr-2 size-6 flex-shrink-0 text-emerald-500" />
					<span>We offset 150% of the carbon emissions from all our tours.</span>
				</li>
				<li class="flex items-start">
					<LeafIcon className="mr-2 size-6 flex-shrink-0 text-emerald-500" />
					<span>Our tours use only renewable energy sources where possible.</span>
				</li>
				<li class="flex items-start">
					<LeafIcon className="mr-2 size-6 flex-shrink-0 text-emerald-500" />
					<span>
						We&apos;ve eliminated single-use plastics from all our operations.
					</span>
				</li>
				<li class="flex items-start">
					<LeafIcon className="mr-2 size-6 flex-shrink-0 text-emerald-500" />
					<span>
						5% of our profits go directly to environmental conservation projects.
					</span>
				</li>
			</ul>
			<a href="/about" class="rounded-lg bg-emerald-500 p-3 text-white hover:bg-emerald-600">
				Learn More About Our Impact
			</a>
		</div>
	</section>
</MainLayout>

---
import FeaturedTour from './featured-tour.astro';
---

<section id="hero" class="flex min-h-[calc(100vh-64px)] w-full flex-col md:flex-row">
	<div
		class="relative flex flex-1 items-center bg-gradient-to-br from-green-600 to-lime-600 p-8 md:p-16"
	>
		<div class="mx-auto max-w-screen-xl px-4 lg:px-6">
			<h1 class="animate-fade-in-up mb-6 text-4xl font-bold text-white md:text-6xl">
				Discover the Untamed Beauty of Nature
			</h1>
			<p class="animate-fade-in-up animation-delay-200 mb-8 text-xl text-white/80">
				Embark on extraordinary journeys that challenge your limits and ignite your sense of
				wonder.
			</p>

			<a
				href="/tours"
				class="animate-fade-in-up animation-delay-400 inline-block transform rounded-full bg-white px-6 py-4 text-lg text-primary shadow-lg transition-all duration-300 ease-in-out hover:scale-105 hover:bg-green-50"
			>
				Start Your Adventure
			</a>
		</div>
	</div>

	<FeaturedTour server:defer>
		<div slot="fallback" class="flex-1 animate-pulse bg-gray-700"></div>
	</FeaturedTour>
</section>

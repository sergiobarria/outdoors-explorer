---
import { Image } from 'astro:assets';

import MaxWidthContainer from '@/components/site/max-width-container.astro';
import { communityImg } from '@/assets';
---

<section class="relative w-full py-12 text-white md:py-24 lg:py-32">
	{/* Background Image */}
	<div class="absolute inset-0 z-0">
		<Image
			src={communityImg}
			alt="Background Image"
			quality={80}
			class="pointer-events-none h-full object-cover"
		/>
	</div>

	{/* Dark overlay */}
	<div
		class="absolute inset-0 z-10 bg-gradient-to-r from-gray-900 via-gray-900/70 to-transparent"
	>
	</div>

	<MaxWidthContainer className="relative z-40">
		<div class="flex flex-col items-start space-y-4 text-left">
			<div class="space-y-2">
				<h2 class="text-3xl font-bold tracking-tighter sm:text-5xl">
					Join Our Green Community
				</h2>
				<p class="max-w-[600px] text-green-100 md:text-xl">
					Sign up for our newsletter to receive exclusive eco-friendly offers, travel
					tips, and inspiring stories.
				</p>
			</div>
			<div class="w-full max-w-md space-y-2">
				<form class="flex space-x-2">
					<input
						class="input input-md input-bordered w-full flex-1"
						placeholder="Enter your email"
						type="email"
					/>
					<button type="submit" class="btn btn-primary btn-md text-white">
						Subscribe
					</button>
				</form>
			</div>
		</div>
	</MaxWidthContainer>
</section>
